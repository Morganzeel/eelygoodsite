---
import "../styles/global.css";
import { Icon } from 'astro-icon/components'
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-gradient-to-b from-teal-900 via-teal-800 to-cyan-800 text-white shadow-lg border-b-4 border-cyan-400/30">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <div class="flex items-center">
          <div class="relative">
              <Icon name="LOGO" width="50" height="50">
            </div>
            <div class="h-6 w-px mx-2"></div>
          <div class="flex flex-col">
            <span class="text-4xl font-bold text-white text-transparent font-[Alex]">EelyGood</span>
          </div>
      </div>

      <div class="hidden md:flex items-center space-x-1">
        <a href="/" class="px-4 py-2 rounded-md text-sm font-medium transition-all duration-300 hover:text-cyan-200 group relative font-[Argh]">
          <span>Home</span>
          <div class="absolute bottom-0 left-0 right-0 h-0.5 bg-gradient-to-r from-cyan-400 to-blue-400 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></div>
        </a>
        <a href="/portfolio" class="px-4 py-2 rounded-md text-sm font-medium transition-all duration-300 hover:text-cyan-200 group relative font-[Argh]">
          <span>Portfolio</span>
          <div class="absolute bottom-0 left-0 right-0 h-0.5 bg-gradient-to-r from-cyan-400 to-blue-400 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></div>
        </a>
        <a href="/blog" class="px-4 py-2 rounded-md text-sm font-medium transition-all duration-300 hover:text-cyan-200 group relative font-[Argh]">
          <span>Blog</span>
          <div class="absolute bottom-0 left-0 right-0 h-0.5 bg-gradient-to-r from-cyan-400 to-blue-400 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></div>
        </a>
        <a href="/contact" class="px-4 py-2 rounded-md text-sm font-medium transition-all duration-300 hover:text-cyan-200 group relative font-[Argh]">
          <span>Contact</span>
          <div class="absolute bottom-0 left-0 right-0 h-0.5 bg-gradient-to-r from-cyan-400 to-blue-400 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></div>
        </a>
        
        <div class="h-6 w-px mx-2 bg-gradient-to-b from-transparent via-cyan-400 to-transparent"></div>
        
        <a href="https://github.com/Morganzeel" target="_blank" class="p-2 rounded-full hover:bg-cyan-900/50 transition-colors duration-300">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
